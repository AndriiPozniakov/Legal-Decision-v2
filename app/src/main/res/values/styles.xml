<resources>
    <style name="BaseText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleTitle" parent="BaseText">
        <item name="fontFamily">@font/mont_bold</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="lineHeight">28sp</item>
<!--        <item name="android:textColor">@color/colorPrimary</item>-->
    </style>

    <style name="StyleSubTitle" parent="BaseText">
        <item name="fontFamily">@font/mont_regular</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="lineHeight">22sp</item>
<!--        <item name="android:textColor">@color/colorSubText</item>-->
    </style>

    <style name="StyleText" parent="BaseText">
        <item name="fontFamily">@font/mont_regular</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="lineHeight">29sp</item>
<!--        <item name="android:textColor">@color/colorText</item>-->
    </style>

    <style name="StyleTextQuote" parent="BaseText">
        <item name="fontFamily">@font/mont_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="lineHeight">25sp</item>
<!--        <item name="android:textColor">@color/colorText</item>-->
    </style>

    <style name="StyleCardTitle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/mont_bold</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="lineHeight">25sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="StyleCardText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/mont_regular</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>